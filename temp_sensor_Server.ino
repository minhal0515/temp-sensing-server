#define ONE_WIRE_BUS 4

OneWire oneWire(ONE_WIRE_BUS);

DallasTemperature sensors(&oneWire);

String temperatureF = "";
String temperatureC = "";

unsigned long lastTime = 0;  
unsigned long timerDelay = 30000;

